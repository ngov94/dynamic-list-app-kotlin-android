<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/movie_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_thumbnail"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Movie Name"
        />
    <TextView
        android:id="@+id/movie_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_thumbnail"
        android:layout_below="@id/movie_name"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"

        android:text="This is default text for description."
        />

    <TextView
        android:id="@+id/movie_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_thumbnail"
        android:text="Cast: Person 1, Person 2"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@id/movie_desc"
        android:textColor="@color/grey"
        />

    <TextView
        android:id="@+id/movie_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:text="Category"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/movie_act"
        android:textColor="@color/design_default_color_primary_dark"
        />


</RelativeLayout>